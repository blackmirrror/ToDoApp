<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/todoItemsFragment">

    <fragment
        android:id="@+id/authFragment"
        android:name="ru.blackmirrror.todoapp.auth.AuthFragment"
        android:label="fragment_auth"
        tools:layout="@layout/fragment_auth" >
        <action
            android:id="@+id/action_authFragment_to_todoItemsFragment"
            app:destination="@id/todoItemsFragment"
            app:launchSingleTop="true"
            app:popUpTo="@+id/nav_graph"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/todoItemsFragment"
        android:name="ru.blackmirrror.todoapp.todoItems.TodoItemsFragment"
        android:label="fragment_todo_items"
        tools:layout="@layout/fragment_todo_items" >
        <action
            android:id="@+id/action_todoItemsFragment_to_editFragment"
            app:destination="@id/editFragment" />
        <action
            android:id="@+id/action_todoItemsFragment_to_authFragment"
            app:destination="@id/authFragment"
            app:launchSingleTop="true"
            app:popUpTo="@+id/nav_graph"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/editFragment"
        android:name="ru.blackmirrror.todoapp.edit.EditFragment"
        android:label="fragment_edit"
        tools:layout="@layout/fragment_edit" />
</navigation>