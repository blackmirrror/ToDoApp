<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".auth.AuthFragment">

    <TextView
        android:id="@+id/tv_auth_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="?attr/colorPrimary"
        android:textSize="20sp"
        android:text="@string/enter"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/et_auth_phone"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="+7"
        android:padding="8dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/edittext_shape_bg"
        app:layout_constraintTop_toBottomOf="@id/tv_auth_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/btn_auth_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="7dp"
        android:src="@drawable/ic_done"
        android:background="@drawable/btn_auth_shape_bg"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="@id/et_auth_phone"
        app:layout_constraintBottom_toBottomOf="@id/et_auth_phone"
        app:layout_constraintStart_toEndOf="@id/et_auth_phone" />

</androidx.constraintlayout.widget.ConstraintLayout>